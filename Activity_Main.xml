<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".MainActivity">

   <com.github.chrisbanes.photoview.PhotoView
       android:id="@+id/photo_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

   <Button
       android:id="@+id/btPesquisar"
       android:layout_width="185dp"
       android:layout_height="62dp"
       android:onClick="pesquisar"
       android:text="Pesquisar"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.177" />

   <TextView
       android:id="@+id/idh"
       android:layout_width="331dp"
       android:layout_height="31dp"
       android:text="IDH:"
       android:textAlignment="center"
       android:textStyle="normal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.835" />

   <TextView
       android:id="@+id/populacao"
       android:layout_width="331dp"
       android:layout_height="31dp"
       android:text="População:"
       android:textAlignment="center"
       android:textStyle="normal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.947" />

   <TextView
       android:id="@+id/municipios"
       android:layout_width="331dp"
       android:layout_height="31dp"
       android:text="Municípios:"
       android:textAlignment="center"
       android:textStyle="normal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.89" />

   <TextView
       android:id="@+id/area"
       android:layout_width="331dp"
       android:layout_height="31dp"
       android:text="Área:"
       android:textAlignment="center"
       android:textStyle="normal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.79" />

   <ImageView
       android:id="@+id/mapaPR"
       android:layout_width="253dp"
       android:layout_height="454dp"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/mapapr" />

   <ImageView
       android:id="@+id/mapaRS"
       android:layout_width="253dp"
       android:layout_height="440dp"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/mapars" />

   <ImageView
       android:id="@+id/mapaSC"
       android:layout_width="266dp"
       android:layout_height="505dp"
       android:visibility="invisible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:srcCompat="@drawable/mapasc"
       tools:layout_editor_absoluteY="111dp" />

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/textInputLayout"
       android:layout_width="409dp"
       android:layout_height="wrap_content"
       tools:layout_editor_absoluteX="1dp"
       tools:layout_editor_absoluteY="94dp">

   </com.google.android.material.textfield.TextInputLayout>

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/estado"
       android:layout_width="412dp"
       android:layout_height="48dp"
       android:hint="Insira um estado:"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>
